<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T439912"
        xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" x:Class="T439912.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" AcceptsReturn="True" Text="Type any text here..." />
        <Button Grid.Row="1" x:Name="createReport" Content="Create report" Click="createReport_Click" />
    </Grid>
</Window>
